{
  "name": "Containerise",
  "version": "2.4.0",
  "description": "Firefox extension to automatically open websites in a container",
  "main": "index.js",
  "repository": "https://kintesh@github.com/kintesh/containerise.git",
  "author": "Kintesh <i.am@kinte.sh>",
  "license": "MIT",
  "scripts": {
    "webpack": "webpack --config ./webpack.dev --watch",
    "prebuild": "rm -rf build && rm -rf web-ext-artifacts",
    "build": "yarn lint && yarn test && webpack --config ./webpack.prod",
    "postbuild": "cp -a static/ build/ && web-ext build -s build/",
    "web-ext": "web-ext run -s build/ --firefox=/Applications/FirefoxNightly.app/Contents/MacOS/firefox-bin --start-url=about:debugging#addons",
    "lint": "eslint --ignore-path .gitignore ./",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.4",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.7.0",
    "css-loader": "0.28.11",
    "eslint": "4.19.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.11",
    "jest": "22.4.4",
    "node-sass": "4.9.0",
    "sass-loader": "7.0.1",
    "style-loader": "0.21.0",
    "web-ext": "2.6.0",
    "webpack": "3.12.0",
    "webpack-merge": "4.1.2"
  }
}
